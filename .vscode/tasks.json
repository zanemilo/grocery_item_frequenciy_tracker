{
	"tasks": [
	  {
		"type": "cppbuild",
		"label": "C/C++: clang++ build active file",
		"command": "/usr/bin/clang++",
		"args": [
		  "-fcolor-diagnostics",
		  "-fansi-escape-codes",
		  "-g",
		  "-std=c++11", // Specify C++11 standard
		  "${workspaceFolder}/**.cpp",
		  "-o",
		  "${workspaceFolder}/myProgram.out"
		],
		"options": {
		  "cwd": "${fileDirname}"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"detail": "Task generated by Debugger."
	  }
	],
	"version": "2.0.0"
  }